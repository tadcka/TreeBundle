<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Tadcka\Bundle\TreeBundle\Model\TreeItem">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="left" column="left" type="integer" nullable="false" />

        <field name="right" column="right" type="integer" nullable="false" />

        <field name="level" column="level" type="integer" nullable="false" />

    </mapped-superclass>

</doctrine-mapping>